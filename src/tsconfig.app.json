{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "esnext",
    "target": "es2015",
    "types": ["node"],
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false,
    "preserveWhitespaces": true
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
